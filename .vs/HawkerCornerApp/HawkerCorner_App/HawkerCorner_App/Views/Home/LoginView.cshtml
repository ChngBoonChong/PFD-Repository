
@{ ViewData["Title"] = "Log In Page";}

<!doctype html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width = device-width,
                                           initial-scale = 1" />
    <link rel="stylesheet" type="text/css" href="~/css/site.css" />
    <style>
        .text-center1 {
            font-size: 40px;
            position: absolute;
            left: 0%;
        }
        .text1 {
            font-size: 90px;
        }
        .front {
            filter: brightness(50%);
            font-family: Montserrat;
            color: black;
            position: fixed;
            top: 30%;
            left: 3%;
        }
        .bg {
            filter: brightness(50%);
            position: absolute;
            height: 93%;
            width: 82%;
            right: 0%;
        }
        .button {
            filter: brightness(90%);
            position: absolute;
            top: 180%;
            left: 0%;
            border-radius: 100px;
            background-color: #FCCE21;
            border: none;
            color: black;
            text-align: center;
            font-size: 20px;
            padding: 12px;
            width: 280px;
            transition: all 0.5s;
            cursor: pointer;
            margin: 5px;
        }
    </style>
</head>
<body style="background-color: grey;">
    <div class="back">
        <img class="bg" src="/images/Picture4.png">
        <div class="front">
            <h1 class="text1">HawkerCorner</h1>
            <h1 class="text-center1">A P2P food delivery platform</h1>
            <!--<button type="submit" class=" login-button">login</button>-->
            <button class="button" disabled><span>Get Started</span></button>
        </div>
    </div>
    @if (TempData["Success"] != null)
    {
        <h5 class="text-success text-center">@TempData["Success"]</h5>
        <br />
    }
    <br><br><br>
    <div class="container" style="position:absolute">
        <div class="row gutters-sm">
            <div class="col-md-12">
                <div class="card" style="background-color: white; border-radius: 50px; width: 100%; height: 100%;">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center">
                            <form method="post" action="~/Home/Login">
                                <fieldset class="loginFieldset">
                                    <br>
                                    <div class="container-fluid">
                                        <h3 style="position:relative; left: 60px;">Log In</h3>
                                        <br><br>
                                        <div class="row justify-content-center">
                                            <div class="form-group">
                                                <h6>Email:</h6>
                                                <input class="form-control rounded-pill border-3 border-primary" placeholder="Email" type="email" name="txtLoginID" id="txtLoginID" required />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="container-fluid">
                                        <div class="row justify-content-center">
                                            <div class="form-group col-md-12">
                                                <h6>Password:</h6>
                                                <input class="form-control rounded-pill border-3 border-primary" placeholder="Password" type="password" name="txtPassword" id="txtPassword" required />
                                            </div>
                                        </div>
                                    </div>
                                    <br />
                                    <div class="container-fluid">
                                        <div class="row justify-content-center">
                                            <div class="form-group">
                                                <input type="submit" id="btnLogin" value="Log In" class="btn btn-primary rounded-pill" style="background-color: #FCCE21; color: black; border-color: #FCCE21; padding: 6px 50px;"/>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="container-fluid">
                                        <div class="text-center">
                                            <br />
                                            <span class="font-weight-bold">Don't Have an Account?</span>
                                            <br />
                                            <a href="~/User/Create">Sign Up Here</a>
                                        </div>
                                    </div>
                                    <br />
                                    <div class="container-fluid">
                                        <div class="row justify-content-center">
                                            <span style="color:red  ;">@TempData["Message"]</span>
                                        </div>
                                    </div>
                                </fieldset>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
</html>
