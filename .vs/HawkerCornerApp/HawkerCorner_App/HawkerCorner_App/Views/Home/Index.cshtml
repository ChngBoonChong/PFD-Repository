@{
    ViewData["Title"] = "Home";
}

<!DOCTYPE HTML>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width = device-width,
                                           initial-scale = 1" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" type="text/css" href="~/css/site.css" />
    <style>
        .text-center {
            font-size: 40px;
            position: absolute;
            left: 0%;
        }
        
        .text1 {

            font-size: 90px;
            
        }
        @@keyframes front {
            0% {
                left: -20%;
            }

            50% {
                left: 3%;
            }

            from {
                opacity: 0%;
            }

            to {
                opacity: 100%;
            }
        }
        .front {
            font-family: Montserrat;
            color: black;
            position: fixed;
            top: 30%;
            left: 3%;
            animation-name: front;
            animation-duration: 3s;
        }
        .bg {
            position: absolute;
            height: 93%;
            width: 82%;
            right: 0%;
        }

        .button {
            position: absolute;
            top: 180%;
            left: 0%;
            border-radius: 100px;
            background-color: #FCCE21;
            border: none;
            color: black;
            text-align: center;
            font-size: 20px;
            padding: 12px;
            width: 280px;
            transition: all 0.5s;
            cursor: pointer;
            margin: 5px;
        }

        .button span {
            cursor: pointer;
            display: inline-block;
            position: relative;
            transition: 0.5s;
        }

        .button span:after {
            content: '\00bb';
            position: absolute;
            opacity: 0;
            top: 0;
            right: -20px;
            transition: 0.5s;
        }

        .button:hover span {
            padding-right: 25px;
        }

        .button:hover span:after {
            opacity: 1;
            right: 0;
        }
    </style>
</head>
<body>
    <img class="bg" src ="/images/Picture4.png">
    <div class="front">
        <h1 class="text1">HawkerCorner</h1>
        <h1 class="text-center">A P2P food delivery platform</h1>
        <!--<button type="submit" class=" login-button">login</button>-->
        <button onclick="document.location='/Home/LoginView'" class="button"><span>Get Started</span></button>
    </div>
</body>

</html>