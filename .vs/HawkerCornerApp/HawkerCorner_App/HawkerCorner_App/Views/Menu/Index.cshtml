@model IEnumerable<HawkerCorner_App.Models.HawkerStore>

@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE HTML>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width = device-width,
                                           initial-scale = 1" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" type="text/css" href="~/css/site.css" />
    <style>
        body {
            margin-bottom: 0;
            background-image: url('/images/Picture1.png');
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
            background-attachment: fixed;
            position: absolute;
            width: 100%;
            right: 0%;
        }

        .header-text {
            font-size: 70px;
            text-align: center;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            color: white;
            bottom: 100px;
        }

        .menu-container {
            background: none;
            top: 1350px;
            position: relative;
            left: 50%;
            transform: translate(-50%, -50%);
        }

        .card {
            border: none;
            border-radius: 25px;
            background-color: rgba(255,255,255,.8);
        }

        .scrolling-wrapper {
            overflow-x: scroll;
            overflow-y: hidden;
            white-space: nowrap;
            padding: 5px;
        }

            .scrolling-wrapper .card {
                display: inline-block;
                padding: 17px;
                border: 1px solid black;
                background: white;
            }

        .card img {
            border-radius: 25px;
        }
    </style>
</head>

<body>
    <div class="header-text">
        "One-stop platform, <br />
        for your indecisiveness!​"
    </div>
    <div class="menu-container">
        <div class="card">
            <h2 style="text-align:center;">
                Star Buy
            </h2>
            <div class="scrolling-wrapper">
                @foreach (var item in Model)
                {
                    <div class="card">
                        <a asp-action="ViewStoreDetails" asp-controller="Menu"
                           asp-route-storeId="@item.StoreID" asp-route-centreId=@item.CentreID><img src="~/images/Picture1.png" style="width:250px" /></a><br />

                        <a asp-action="ViewStoreDetails" asp-controller="Menu"
                           asp-route-storeId="@item.StoreID" asp-route-centreId=@item.CentreID> @item.Name.ToString() </a>

                        <br /> Rating: @item.AVGRating.ToString()
                    </div>
                }
            </div>
        </div>

        <br />
        <br />

        <div class="card">
            <h2 style="text-align:center;">
                Discover Near You
            </h2>
            <div class="scrolling-wrapper">
                @foreach (var item in Model)
                {
                    <div class="card">
                        <a asp-action="ViewStoreDetails" asp-controller="Menu"
                           asp-route-storeId="@item.StoreID" asp-route-centreId=@item.CentreID><img src="~/images/selection-of-chinese-food-that-may-cause-chinese-restaurant-syndrome.jpg" style="width:250px" /></a><br />

                        <a asp-action="ViewStoreDetails" asp-controller="Menu"
                           asp-route-storeId="@item.StoreID" asp-route-centreId=@item.CentreID> @item.Name.ToString() </a>

                        <br /> Rating: @item.AVGRating.ToString()
                    </div>
                }
            </div>
        </div>

        <br />
        <br />
        <div class="card">
            <h2 style="text-align:center;">
                Recommended Near You
            </h2>
            <div class="scrolling-wrapper">
                @foreach (var item in Model)
                {
                    <div class="card">
                        <a asp-action="ViewStoreDetails" asp-controller="Menu"
                           asp-route-storeId="@item.StoreID" asp-route-centreId=@item.CentreID><img src="~/images/hawker-food-hero-image-image-credit-visit-singapore-1600x900.jpg" style="width:250px" /></a><br />

                        <a asp-action="ViewStoreDetails" asp-controller="Menu"
                           asp-route-storeId="@item.StoreID" asp-route-centreId=@item.CentreID> @item.Name.ToString() </a>

                        <br /> Rating: @item.AVGRating.ToString()
                    </div>
                }
            </div>
        </div>
    </div>
</body>
</html>