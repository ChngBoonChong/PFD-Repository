@{
}
<div>
    @using (Html.BeginForm("OrderForm", "Menu", FormMethod.Post))
    {
        <br />
        <br />
        <h2><span style="background-color: #FFFF00"> Ordering Sheet <span/></h2>
        <h5> Please fill in the appropriate details. </h5>
        <h6> Each order item should be seperated with a comma (,)!</h6>
        <br />
        <br />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(m => m.Address)
            </dt>
            <dd class="col-sm-10">
                @Html.TextBoxFor(m => m.Address)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.OrderList)
            </dt>
            <dd class="col-sm-10">
                @Html.TextBoxFor(model => model.OrderList)
            </dd>
        </dl>
        <input type="submit" value="Submit Order" />
    }
</div>