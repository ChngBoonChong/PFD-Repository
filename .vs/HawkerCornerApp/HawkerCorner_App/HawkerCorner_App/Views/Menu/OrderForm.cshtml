@{
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width = device-width,
                                           initial-scale = 1" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" type="text/css" href="~/css/site.css" />
    <style>
        body {
            margin-bottom: 0;
            background-image: url('/images/general bg.png');
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
            background-attachment: fixed;
            position: absolute;
            width: 100%;
            right: 0%;
        }
    </style>
</head>

<body>
    <div>
        @using (Html.BeginForm("OrderForm", "Menu", FormMethod.Post))
        {
            <br />
            <br />
            <h1><span style="background-color: #FFFF00"> Ordering Sheet <span /></h1>
            <h5> Please fill in the appropriate details. </h5>
            <h6> Each order item should be seperated with a comma (,)!</h6>
            <br />
            <br />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(m => m.Address)
                </dt>
                <dd class="col-sm-10">
                    @Html.TextBoxFor(m => m.Address)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.OrderList)
                </dt>
                <dd class="col-sm-10">
                    @Html.TextBoxFor(model => model.OrderList)
                </dd>
            </dl>
            <input type="submit" value="Submit Order" />
        }
    </div>
</body>