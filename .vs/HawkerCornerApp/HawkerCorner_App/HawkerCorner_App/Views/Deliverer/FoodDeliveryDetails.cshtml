@model HawkerCorner_App.Models.FoodOrder

@{
    ViewData["Title"] = "FoodDeliveryDetails";
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width = device-width,
                                           initial-scale = 1" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" type="text/css" href="~/css/site.css" />
    <style>
        body {
            margin-bottom: 0;
            background-image: url('/images/yellow background2.png');
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
            background-attachment: fixed;
            position: absolute;
            width: 100%;
            right: 0%;
        }
    </style>
</head>

<body>
    <h1><span style="background-color: #FFFF00">Food Delivery Details</span></h1>

    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.OrderID)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.OrderID)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UserID)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UserID)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DelivererID)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DelivererID)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.StoreID)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.StoreID)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Address)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Address)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.OrderList)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.OrderList)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Date)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Date)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.OrderConfirm)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.OrderConfirm)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.OrderComplete)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.OrderComplete)
            </dd>
        </dl>
    </div>
    <div>
        @*<a asp-action="CompleteOrder" asp-controller="Deliverer">Complete Order</a>*@

        @Html.ActionLink("Complete", "CompleteOrder", new { Model.OrderID })

    </div>
</body>